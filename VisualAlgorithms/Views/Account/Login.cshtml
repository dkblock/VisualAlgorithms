@model VisualAlgorithms.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Вход";
}

<div class="main-form-container col-4">
    <div class="main-form-title text-center">Вход</div>
    <form class="main-form" method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
        <div class="main-form-label text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Username" class="main-form-label"></label><br/>
            <input asp-for="Username" class="form-control"/>
            <span class="main-form-label text-danger" asp-validation-for="Username"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="main-form-label"></label><br/>
            <input asp-for="Password" class="form-control"/>
            <span class="main-form-label text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input asp-for="RememberMe" class="main-form-label"/>
            <label asp-for="RememberMe" class="main-form-label"></label>
        </div>
        <div>
            <input class="button button-success main-form-btn" type="submit" value="Войти"/>
        </div>
    </form>
</div>