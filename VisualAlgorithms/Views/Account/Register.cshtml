@model VisualAlgorithms.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="main-form-container col-4">
    <div class="main-form-title text-center">Регистрация</div>
    <form class="main-form" method="post" asp-controller="Account" asp-action="Register">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="row">
            <div class="form-group col-6">
                <label asp-for="Email" class="main-form-label"></label><br />
                <input asp-for="Email" class="form-control" />
                <span class="main-form-label text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="Group" class="main-form-label"></label><br />
                <input asp-for="Group" class="form-control" />
                <span class="main-form-label text-danger" asp-validation-for="Group"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-6">
                <label asp-for="FirstName" class="main-form-label"></label><br />
                <input asp-for="FirstName" class="form-control" />
                <span class="main-form-label text-danger" asp-validation-for="FirstName"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="LastName" class="main-form-label"></label><br />
                <input asp-for="LastName" class="form-control" />
                <span class="main-form-label text-danger" asp-validation-for="LastName"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-6">
                <label asp-for="Password" class="main-form-label"></label><br />
                <input type="password" asp-for="Password" class="form-control" />
                <span class="main-form-label text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="PasswordConfirm" class="main-form-label"></label><br />
                <input type="password" asp-for="PasswordConfirm" class="form-control" />
                <span class="main-form-label text-danger" asp-validation-for="PasswordConfirm"></span>
            </div>
        </div>
        <div>
            <input class="button button-success main-form-btn" type="submit" value="Регистрация" />
        </div>
    </form>
</div>