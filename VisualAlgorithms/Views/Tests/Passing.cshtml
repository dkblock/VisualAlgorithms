@model VisualAlgorithms.Models.UserAnswer

@{
    var title = $"Вопрос {ViewBag.QuestionNumber}";
    ViewData["Title"] = title;
}

@if (!string.IsNullOrEmpty(Model.TestQuestion.Image))
{
    <div class="main-form-container">
        <div class="main-form-title text-center">@title</div>
        <div class="question-container">
            <div class="main-form col-6">
                @{ await Html.RenderPartialAsync("_PassingTestQuestion", Model);}
            </div>
            <div class="col-6 question-img-container">
                <img class="test-img-bordered" src="images/test-questions/@Model.TestQuestion.Image" alt="img" />
            </div>
        </div>
    </div>
}
else
{
    <div class="main-form-container col-6">
        <div class="main-form-title text-center">@title</div>
        <div class="main-form">
            @{ await Html.RenderPartialAsync("_PassingTestQuestion", Model);}
        </div>
    </div>
}