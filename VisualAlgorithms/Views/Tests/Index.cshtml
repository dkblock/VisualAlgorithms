@model IEnumerable<VisualAlgorithms.Models.Test>
@{
    ViewData["Title"] = "Тесты";
}

<h1 class="display-4 text-center">Тесты</h1>

<table class="table text-center">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Algorithm.Name)
            </th>
            <th scope="col">
                Количество вопросов
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var test in Model)
    {
        <tr>
            <td>
                <a class="list-group-item list-group-item-action" asp-controller="Tests" asp-action="Info" asp-route-id="@test.Id">
                    @Html.DisplayFor(modelItem => test.Name)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => test.Algorithm.Name)
            </td>
            <td>
                @test.TestQuestions.Count()
            </td>
        </tr>
    }
    </tbody>
</table>