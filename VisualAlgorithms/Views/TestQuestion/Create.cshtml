@using Microsoft.AspNetCore.Identity
@using VisualAlgorithms.Components
@model VisualAlgorithms.ViewModels.TestQuestionViewModel

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Добавление вопроса";
    Model.UserId = UserManager.GetUserId(User);
}

<div class="main-form-title text-center">Вопрос @Model.QuestionNumber</div>
@(await Html.RenderComponentAsync<TestQuestionCreateComponent>(RenderMode.ServerPrerendered, new { QuestionModel = Model }))