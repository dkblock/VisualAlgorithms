@model VisualAlgorithms.Models.TestQuestion

@{
    ViewData["Title"] = "Удаление вопроса";
}

<div class="main-form-container col-4">
    <div class="main-form-title text-center">Вопрос @ViewBag.QuestionNumber</div>
    <form class="main-form" asp-action="Delete">
        <div class="main-form-label text-center">Вы действительно хотите удалить данный вопрос? Все связанные данные также будут удалены!</div>
        <hr />
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Question" />
        <input type="hidden" asp-for="TestQuestionType" />
        <input type="hidden" asp-for="CorrectAnswerId" />
        <input type="hidden" asp-for="Image" />
        <input type="hidden" asp-for="IsLastQuestion" />
        <input type="hidden" asp-for="TestId" />
        <div class="button-box button-box-centered">
            <input type="submit" value="Да" class="button button-danger main-form-btn col-5" />
            <a class="button main-form-btn col-5" asp-controller="Tests" asp-action="Edit" asp-route-id="@Model.TestId">Нет</a>
        </div>
    </form>
</div>
