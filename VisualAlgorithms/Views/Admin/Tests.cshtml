@model IEnumerable<VisualAlgorithms.Models.Test>

@{
    ViewData["Title"] = "Тесты";
}

<table class="table text-center">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Algorithm.Name)
        </th>
        <th>
            Количество вопросов
        </th>
        <th>
            <a class="btn btn-success" asp-controller="Tests" asp-action="Create">Добавить тест</a>
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var test in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => test.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => test.Algorithm.Name)
            </td>
            <td>
                @test.TestQuestions.Count
            </td>
            <td>
                <a class="btn btn-primary" asp-controller="Tests" asp-action="Edit" asp-route-id="@test.Id">Изменить</a>
            </td>
        </tr>
    }
    </tbody>
</table>