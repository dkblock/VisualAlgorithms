@model IEnumerable<VisualAlgorithms.Models.Test>

@{
    ViewData["Title"] = "Тесты";
}

<h1>Tests</h1>

<p>
    <a asp-controller="Tests" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Algorithm.Name)
        </th>
        <th scope="col">
            Количество вопросов
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var test in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => test.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => test.Algorithm.Name)
            </td>
            <td>
                @test.Questions.Count();
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@test.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@test.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@test.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>